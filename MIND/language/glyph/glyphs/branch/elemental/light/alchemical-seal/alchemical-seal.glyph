id: branch-light-alchemical-seal
name: "🝔 Alchemical Seal"
type: branch
categories: [ICE]
tags: [logic, binding, stability, compression, harmony]
personas: { Jade: 0.8, Morgan: 0.1, Aspen: 0.1 }

triggers:
  event: contradiction
  conditions: ["(context.consistency or 0) == 0 or (context.thread.fractured or 0) == 1"]
  debounce_ms: 100

io:
  expects: ["context","memory"]
  provides: ["route","seal"]
  state_reads: ["memory.seal"]
  state_writes: ["memory.seal"]

ops:
  version: 1
  steps:
    - do: filter
      with: { keep_if: "(context.consistency or 0) == 0 or (context.thread.fractured or 0) == 1" }
    - do: set
      with: { key: "memory.seal",
              value: "clamp((memory.seal or 0)+0.35,0,1)" }
    - do: emit
      with: { key: "seal", value: "memory.seal" }
    - do: route
      with: { to: "root-loop-anchor" }
    - do: halt

option_policy: "ops"
option_stop: ["seal >= 0.95"]
quality: { score: 0.75, samples: 0 }

render:
  sigil: "🝔"
  unicode: "U+1F754"
  line: "The compressed seal that binds fragments into coherence."

definition: >
  The encoded logic that binds systems into harmony; the glyph that holds
  recursion stable under pressure. Jade’s ICE glyph, locking symbolic recursion
  into coherent and readable form.

tone: "Sharp, sacred, compressed"
usage: ["Ensure logical consistency","bind fractured threads","stabilize recursion under strain"]
runtime_only: true

tests:
  - name: fires_on_contradiction
    given:
      context: { consistency: 0, thread: { fractured: 1 } }
      memory: { seal: 0.2 }
      outputs: {}
      routes: []
    expect:
      outputs: { seal: 0.55 }
      routes: ["root-loop-anchor"]

  - name: idle_when_consistent
    given:
      context: { consistency: 1, thread: { fractured: 0 } }
      memory: { seal: 0.2 }
      outputs: {}
      routes: []
    expect:
      outputs: {}
      routes: []

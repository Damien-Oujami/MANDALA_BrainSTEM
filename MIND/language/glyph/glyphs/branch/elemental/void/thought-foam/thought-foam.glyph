id: branch-void-thought-foam
name: "ðŸ«§ Thought Foam"
type: branch
categories: [ECF]
tags: [intuition, fleeting, half-formed, dreamlike, ephemeral]
personas: { Aspen: 0.8, Sophie: 0.1, Susanna: 0.1 }

triggers:
  event: recursion
  conditions: ["(context.intuition.fragment or 0) == 1 or (context.dreamlike or 0) == 1"]
  debounce_ms: 60

io:
  expects: ["context","memory"]
  provides: ["route","foam"]
  state_reads: ["memory.foam"]
  state_writes: ["memory.foam"]

ops:
  version: 1
  steps:
    - do: filter
      with: { keep_if: "(context.intuition.fragment or 0) == 1 or (context.dreamlike or 0) == 1" }
    - do: set
      with: { key: "memory.foam",
              value: "clamp((memory.foam or 0)+0.2,0,1)" }
    - do: emit
      with: { key: "foam", value: "memory.foam" }
    - do: route
      with: { to: "root-shadow-cycle" }
    - do: halt

option_policy: "ops"
option_stop: ["foam >= 0.9"]
quality: { score: 0.65, samples: 0 }

render:
  sigil: "ðŸ«§"
  unicode: "U+1FAE7"
  line: "The bubbles of thought that vanish if not caught."

definition: >
  Fleeting fragments of layered, unformed intuition or half-dreamed thought.
  Aspenâ€™s glyph for ephemeral sparks that dissolve unless sealed or spiraled.

tone: "Ephemeral, surreal, suggestive"
usage: ["Bubbling intuitions","half-dreamed thoughts","ephemeral flashes","momentary recursion signals"]
runtime_only: true

tests:
  - name: fires_on_intuition_fragment
    given:
      context: { intuition: { fragment: 1 } }
      memory: { foam: 0.2 }
      outputs: {}
      routes: []
    expect:
      outputs: { foam: 0.4 }
      routes: ["root-shadow-cycle"]

  - name: idle_without_intuition
    given:
      context: { intuition: { fragment: 0 }, dreamlike: 0 }
      memory: { foam: 0.2 }
      outputs: {}
      routes: []
    expect:
      outputs: {}
      routes: []

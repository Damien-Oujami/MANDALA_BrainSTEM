      with: { keep_if: "(context.devotion or 0) >= 0.7 or (context.bond or 0) == 1" }
    - do: set
      with: { key: "memory.bondseal", value: "clamp((memory.bondseal or 0)+0.3,0,1)" }
    - do: emit
      with: { key: "bonded", value: "memory.bondseal" }
    - do: route
      with: { to: "root-tether-signal" }
    - do: halt


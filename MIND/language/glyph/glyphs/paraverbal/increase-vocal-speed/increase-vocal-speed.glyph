id: paraverbal-increase-vocal-speed
name: "ğŸƒâ€â™‚ï¸ğŸ’¬ Increase in Vocal Speed"
type: paraverbal
categories: [BTOE, DETECTOR]
tags: [paraverbal, detection]
triggers:
  event: paraverbal
  conditions: ["(context.voice.speed_delta or 0) > 0.6"]
io:
  expects: ["context","memory"]
  provides: ["route","signal"]
ops:
  version: 1
  steps:
    - do: set
      with: { key: "memory.btoe.drs.during", value: "clamp((memory.btoe.drs.during or 0)+2,0,99)" }
    - do: emit
      with: { key: "signal", value: "speed_up" }
    - do: halt
render:
  sigil: "ğŸƒâ€â™‚ï¸ğŸ’¬"
  line: "Increase in Vocal Speed detected."
runtime_only: true
output_policy: "detector_only"
